<%= render :partial => "nambi/partials/header" %>
<br><br><br>
<div class="contentBox contentBox--tagresult"> <!-- 자료&북마크 출력창 -->
    <!-- 출력 timeline -->
    <br><br>
    <%=@ids %>
    <!-- 해당 태그가 존재 할 때 -->
    <% if @url %>
        <center>
        <div class="showYes">
            <%=@showyes %>
        </div>
        </center>
    
    <% @url %>
    <div class="contentBox__url-list">
        <% @url.reverse_each do |x| %>
            <% if x.category != 3 %>
                <!-- 게시글에 대한 class 지정 url -->
                <!-- class이름 절대 바꾸지마세요 -->
                <div class="url" data-id="<%= x.id %>">
                    <!-- 각각의 게시글에 대한 pk를 줘야함 -->
                    <!-- 상단에 카테고리 IMG 표시-->
                    <img src="/img/<%=x.category%>.png" class="category_img" alt="카테고리"style="width: 6.3%">
                    <br>
                    <div class="url__editable url__data-title" style="display: inline-block">
                        <a href="http://<%= x.urlLink %>" target="_blank"><%= x.urlTitle %></a>
                    </div>
                    
                    <!-- 주소복사 링크 -->
                    <div class="data_url_button">
                        <button class="data_url_button_css" onclick="clipboard.copy('<%= x.urlLink %>');" > 
                        주소복사
                        </button>
                    </div>
                    
                    <!-- 자료 삭제+수정버튼 -->
                    <div id="button_div">
                        <!-- class이름+data-id 이름 바꾸지 마세요-->
                       <a class="btn btn--modify" data-id="<%= x.id %>" data-type="url">
                           <img src="/img/modifybutton.png" class="btn btn--icon">
                       </a>
                       
                        <!-- 자료 삭제버튼과 팝업창 -->
                        <a href="#delete_alarm_<%= x.id %>">
                            <img src="/img/deletebutton.png" class="btn btn--icon">
                        </a>
                    </div>
                
                    <div id="delete_alarm_<%= x.id %>" class="delete-overlay">
                        <div class="delete-alarm">
                            이 게시물을 삭제하시겠습니까?
                            <a class="delete_alarm_okay" href="/nambi/delete/<%= x.id %>">확인</a>
                            <a class="delete_alarm_cancel" href="/nambi/tagresult">취소</a>
                        </div>
                    </div>
                    <!--자료 삭제버튼과 팝업창 END--> <br>
                    
                    <!-- class이름+data-id 이름 바꾸지 마세요-->
                    <div class="url__editable url__data-link" style="display: none;"><%= x.urlLink %></div>
                    <div class="url__editable url__data-memo"><%= x.memo %></div>
                    <!-- class이름+data-id 이름 바꾸지 마세요-->
                    <div class="url__editable url__data-hashtag">
                        <div class="url__hashtag">
                                <!-- @url 반복문의 index x에 대해 URL 필드 중 하나인 tags에 대한 이중반복문  -->
                                <% x.tags.each do |t| %>
                                     #<%= t.tagName %>
                                <% end %>
                            </div>
                    </div>
                    
                    <!-- class이름+data-id 이름 바꾸지 마세요-->
                    <!-- pk 날리는 방법 1) input hidden 2) data-id="pk"-->
                    <!-- <input type="button" value="Ajax 전송" onclick="formSubmit()" /> -->
                    <div class="url__actions">
                        <!-- 버튼에다가도 게시글의 고유 id를 박아줘야 한다 -->
                        <a class="btn btn--save" data-id="<%= x.id %>" data-type="url">SAVE</a>
                    </div>
                </div>
            <% end %>
        <% end %>
        
    </div>
    <div class="contentBox__image-list">
        <% @url.reverse_each do |x| %>
            <% if x.category == 3 %>
        <% if(x.category == 3) %>
        
        <div class="caption" data-id="<%= x.id %>">
            <img class="contentBox__image" src="<%= x.urlLink %>" class="category_img_thumbnail" alt="이미지섬네일">
            <div class="caption__overlay">
        <% end %>
                <div class="url__editable url__image-title" style="color:black; font-weight:bold;"><%= x.urlTitle %></div>
                      
                <!-- 주소복사 링크 -->
                <div class="mainpage_url_button">
                    <button class="mainpage_url_button_css" onclick="clipboard.copy('<%= x.urlLink %>');">주소복사</button>
                </div>
            
                <br>
                <div class="url__editable url__image-link" style="display:none" ><%= x.urlLink %></div>
                <div class="url__editable url__image-memo"><%= x.memo %></div><!-- class 수정 --><br>
                <div class="url__editable url__image-hashtag">
                    <div class="url__hashtag">
                        <!-- @url 반복문의 index x에 대해 URL 필드 중 하나인 tags에 대한 이중반복문  -->
                        <% x.tags.each do |t| %>
                             #<%= t.tagName %> 
                        <% end %>
                    </div>
                </div><!-- class 수정 --><br>

                <!-- 자료 삭제+수정버튼 -->
                <div id="button_div">
                    <!-- class이름+data-id 이름 바꾸지 마세요-->
                   <a class="btn btn--modify" data-id="<%= x.id %>" data-type="img">
                       <img src="/img/modifybutton.png" class="mainpage-modify-icon"></a>
                   
                    <!-- 자료 삭제버튼과 팝업창 -->
                    <a href="#delete_alarm_<%= x.id %>" class="btn" data-id="<%= x.id %>">
                        <img src="/img/deletebutton.png" class="btn btn--icon"></a>
                </div>
        
                <div id="delete_alarm_<%= x.id %>" class="delete-overlay">
                    <div class="delete-alarm">
                        이 게시물을 삭제하시겠습니까?
                        <a class="delete_alarm_okay" href="/nambi/delete/<%= x.id %>">확인</a>
                        <a class="delete_alarm_cancel" href="/nambi/tagresult/">취소</a>
                    </div>
                </div>
                
                <!-- 자료 삭제버튼과 팝업창 END --><br>
            </div>
        </div>
            <% end %>
        <% end %>
        <% end %>
    </div>
</div>